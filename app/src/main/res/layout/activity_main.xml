<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codetutor.dialogdemo.ui.activities.MainActivity">


    <Button
        android:id="@+id/buttonSimpleAlert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:text="Button"
        tools:text="Alert Dialog" />

    <Button
        android:id="@+id/buttonDatePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonSimpleAlert"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:text="Button DatePicker" />

    <Button
        android:id="@+id/buttonTimePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonDatePicker"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:text="Button Timepicker" />


    <TextView
        android:id="@+id/textViewCustomDialog"
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:textColor="@android:color/holo_green_light"
        android:layout_below="@+id/buttonTimePicker"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:text="Click here" />


</RelativeLayout>
